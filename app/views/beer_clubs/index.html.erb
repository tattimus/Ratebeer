<h1>Beer Clubs</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= link_to 'Name', beer_clubs_path(order:"name") %> </th>
      <th> <%= link_to 'Founded', beer_clubs_path(order:"founded") %> </th>
      <th> <%= link_to 'City', beer_clubs_path(order:"city") %> </th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |club| %>
      <tr>
        <td><%= link_to club.name, club %></td>
        <td><%= club.founded %></td>
        <td><%= club.city %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  <%= link_to 'New Beer Club', new_beer_club_path, class:'btn btn-success' %>
<% end %>