<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style.name %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
<% if @beer.ratings.empty? %>
  beer has not yet been rated!
<% else %>
  Has <%= @beer.ratings.count %> <%= "rating".pluralize(@beer.ratings.count) %>, average <%= @beer.average_rating %>
<% end %>
</p>

<% if current_user %>
  <h4>give a rating:</h4>

  <%= form_for(@rating) do |f| %>
    <%= f.hidden_field :beer_id %>
    score: <%= f.number_field :score %>
    <%= f.submit class:"btn btn-primary"%>
  <% end %>

  <%= edit_and_destroy_buttons(@beer) %>
<% end %>

