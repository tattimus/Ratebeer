<p id="notice"><%= notice %></p>

<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @places %>
<h4>the current beer weather in <%= @places.first.city %></h4>

<p><%= @weather['temp_c'] %> Celsius</p>

<img src=<%= @weather['condition']['icon'] %> >

<p><strong>wind</strong> <%= (@weather['wind_kph'] * 0.277777778).round(1) %> m/sec, direction <%= @weather['wind_dir'] %> </p>
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>name</th>
        <th>status</th>
        <th>street</th>
        <th>city</th>
        <th>zip</th>
        <th>country</th>
        <th>overall</th>
      </tr>
    </thead>
    <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.id %></td>
        <td><%= link_to place.name, place_path(place.id), place_id: place.id %></td>
        <td><%= place.status %></td>
        <td><%= place.street %></td>
        <td><%= place.city %></td>
        <td><%= place.zip %></td>
        <td><%= place.country %></td>
        <td><%= place.overall %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>